fun get_num_arr_index(arr: number *, idx: number): number {
        return *(arr + (8 * idx));
};

fun num_ptr_to_index(arr: number *mut, idx: number): number *mut {
	return arr + (8 * idx);
};

fun char_ptr_to_index(arr: char *mut, idx: number): char *mut {
	return arr + idx;
};
