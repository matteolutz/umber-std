#include std.ub
#include heap.ub

fun print_num(n: number, base: number): void {
	let buf_end: char *mut = (heap_malloc(129) + 129) as char *mut;
	
        let size: number = itoa(n, base, buf_end);

        print_char_ptr((buf_end - size) as char *, size);

        heap_free(buf_end as void *mut);

        return;
};
